<div class="container">
  <div class="row">
    <div class="col-md-9">
      <h2>Events</h2>
        <%= link_to 'New Event', new_event_path, class: 'btn btn-primary btn-sm' %>
      <br>
      <br>

      <div class="container">
        <div class="row">
          <div class="col-md-10">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th><%= link_to "Name", sort: "name" %></th>
                  <th><%= link_to "Place", sort: "place" %></th>
                  <th><%= link_to "Date", sort: "date" %></th>
                  <th><%= link_to "Comments", sort: "comments" %></th>
                  <th><%= link_to "User", sort: "user" %></th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @events.each do |event| %>
                  <tr>
                    <td><%= link_to event.name, event %></td>
                    <td><%= link_to event.place, event %></td>
                    <td><%= link_to event.date, event %></td>
                    <td><%= link_to event.comments, event %></td>
                    <td><%= link_to event.user_id, event %></td>
                    <td><%= link_to 'Edit', edit_event_path(event), class: 'btn btn-default btn-sm' %></td>
                    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' },
                                                                      class: 'btn btn-danger btn-sm' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

